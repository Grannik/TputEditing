#!/bin/bash
E='echo -e';e='echo -en';trap "R;exit" 2
    ESC=$( $e "\e")
   TPUT(){ $e "\e[${1};${2}H" ;}
  CLEAR(){ $e "\ec";}
# 25 –≤–æ–∑–º–æ–∂–Ω–æ —ç—Ç–æ 
  CIVIS(){ $e "\e[?25l";}
# 7 –≤–æ–∑–º–æ–∂–Ω–æ —ç—Ç–æ —Ü–≤–µ—Ç —Ç–µ–∫—Å—Ç–∞ —Å–ø–∏—Å–∫–∞
   MARK(){ $e "\e[7m";}
# 0 —ç—Ç–æ —Ü–≤–µ—Ç –∑–∞–¥–Ω–µ–≥–æ —Ñ–æ–Ω–∞ —Å–ø–∏—Å–∫–∞
 UNMARK(){ $e "\e[0m";}
# ~~~~~~~~ –≠—Ç–∏ —Å—Ç—Ä–æ–∫–∏ –∑–∞–¥–∞—é—Ç —Ü–≤–µ—Ç —Ñ–æ–Ω–∞ ~~~~~~~~
 R(){ CLEAR ;stty sane;CLEAR;};
#R(){ CLEAR ;stty sane;$e "\ec\e[37;44m\e[J";};
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   HEAD(){ for (( a=1; a<=34; a++ ))
           do
           TPUT $a 87
           $E "\xE2\x94\x82                                          \xE2\x94\x82";
           done
           TPUT 3 88 
           $E "         –°–ü–†–ê–í–û–ß–ù–ò–ö TPUT                  ";
           TPUT 32 88 
           $E "         Up \xE2\x86\x91 \xE2\x86\x93 Down Select Enter         ";
           MARK;TPUT 1 88
           $E "      –ü—Ä–æ–≥—Ä–∞–º–º–∞ –Ω–∞–ø–∏—Å–∞–Ω–∞ –Ω–∞ bash tput     " ;UNMARK;}
           i=0; CLEAR; CIVIS;NULL=/dev/null
# 32 —ç—Ç–æ —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ —Å–≤–µ—Ä—Ö—É –∏ 48 —ç—Ç–æ —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ —Å–ª–µ–≤–∞
   FOOT(){ MARK;TPUT 34 88
# –Ω–∏–∂–Ω–µ–µ –∑–∞–≥–ª–∞–≤–∏–µ
           $E "         Grannik | 2021.05.11 | üÑØ         ";UNMARK;}
# —ç—Ç–æ —É–ø—Ä–∞–≤–ª—è–µ—Ç –∫–Ω–æ–ø–∫–∞–º–∏ –≤–≤–µ—Ä/—Ö–≤–Ω–∏–∑
 i=0; CLEAR; CIVIS;NULL=/dev/null
#
 ARROW(){ IFS= read -s -n1 key 2>/dev/null >&2
           if [[ $key = $ESC ]];then 
              read -s -n1 key 2>/dev/null >&2;
              if [[ $key = \[ ]]; then
                 read -s -n1 key 2>/dev/null >&2;
                 if [[ $key = A ]]; then echo up;fi
                 if [[ $key = B ]];then echo dn;fi
              fi
           fi
           if [[ "$key" == "$($e \\x0A)" ]];then echo enter;fi;}
# 4 –∏ –¥–∞–ª–µ–µ —ç—Ç–æ –æ—Ç—Å—Ç—É–ø —Å–≤–µ—Ä—Ö—É –∏ 48 —ç—Ç–æ —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ —Å–ª–µ–≤–∞
     M0(){ TPUT  5 97; $e "–ü–µ—Ä–≤–∞—è —Å—Ç—Ä–æ–∫–∞ –∏ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π";}
     M1(){ TPUT  6 97; $e "–ê—Ç—Ä–∏–±—É—Ç—ã —Ç–µ—Ä–º–∏–Ω–∞–ª–∞";}
     M2(){ TPUT  7 97; $e "–≠—Ñ—Ñ–µ–∫—Ç—ã —Ç–µ–∫—Å—Ç–∞";}
     M3(){ TPUT  8 97; $e "–¶–≤–µ—Ç–∞ —Ç–µ–∫—Å—Ç–∞";}
     M4(){ TPUT  9 97; $e "–¶–≤–µ—Ç–∞ –∑–∞–¥–Ω–µ–≥–æ –ø–ª–∞–Ω–∞";}
     M5(){ TPUT 10 97; $e "–¶–≤–µ—Ç–∞ —Ç–µ–∫—Å—Ç–∞ –∏ –∑–∞–¥–Ω–µ–≥–æ –ø–ª–∞–Ω–∞";}
     M6(){ TPUT 11 97; $e "–¶–≤–µ—Ç–∞ —á–µ—Ä–µ–∑ –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é";}
     M7(){ TPUT 12 97; $e "–ü–æ–∫–∞–∑–∞—Ç—å —Å–∫—Ä–∏–ø—Ç";}
     M8(){ TPUT 13 97; $e "–¶–≤–µ—Ç–∞ —á–µ—Ä–µ–∑ –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é –≤ —Å—Ç—Ä–æ–∫–µ";}
     M9(){ TPUT 14 97; $e "–ü–æ–∫–∞–∑–∞—Ç—å —Å–∫—Ä–∏–ø—Ç";}
    M10(){ TPUT 15 97; $e "–ß–∞—Å—ã –≤ –∫–æ–Ω—Å–æ–ª–µ";}
    M11(){ TPUT 16 97; $e "–ü–æ–∫–∞–∑–∞—Ç—å —Å–∫—Ä–∏–ø—Ç";}
    M12(){ TPUT 17 97; $e "–í–≤–µ–¥–∏—Ç–µ –Ω–æ–º–µ—Ä —Ü–≤–µ—Ç–∞ —Ç–µ–∫—Å—Ç–∞";}
    M13(){ TPUT 18 97; $e "–ü–æ–∫–∞–∑–∞—Ç—å —Å–∫—Ä–∏–ø—Ç";}
    M14(){ TPUT 19 97; $e "–í–≤–µ–¥–∏—Ç–µ –Ω–æ–º–µ—Ä —Ü–≤–µ—Ç–∞ –∑–∞–¥–Ω–µ–≥–æ –ø–ª–∞–Ω–∞";}
    M15(){ TPUT 20 97; $e "–ü–æ–∫–∞–∑–∞—Ç—å —Å–∫—Ä–∏–ø—Ç";}
    M16(){ TPUT 21 97; $e "16";}
    M17(){ TPUT 22 97; $e "17";}
    M18(){ TPUT 23 97; $e "18";}
    M19(){ TPUT 24 97; $e "19";}
    M20(){ TPUT 25 97; $e "20";}
    M21(){ TPUT 26 97; $e "21";}
    M22(){ TPUT 27 97; $e "–°–ª–µ–¥–∏–º —Å–∏–Ω—Ç–∞–∫—Å–∏—Å–æ–º";}
    M23(){ TPUT 28 97; $e "–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å —Ñ–∞–π–ª menuTput";}
    M24(){ TPUT 29 97; $e "–°—Å—ã–ª–∫–∏ –≤ –∏–Ω—Ç–µ—Ä–Ω–µ—Ç–µ";}
    M25(){ TPUT 30 97; $e "EXIT";}
# –¥–∞–ª–µ–µ –∏–¥–µ—Ç –ø–µ—Ä–µ–º–µ–Ω–Ω–∞—è LM=10 –ø–æ–∑–≤–æ–ª—è—é—â–∞—è –≤—ã—Å—Ç—Ä–∞–∏–≤–∞—Ç—å —Å–ø–∏—Å–æ–∫ –≤ –≤–µ—Ä—Ç–∏–∫–∞–ª—å.
   LM=25
   MENU(){ for each in $(seq 0 $LM);do M${each};done;}
    POS(){ if [[ $cur == up ]];then ((i--));fi
           if [[ $cur == dn ]];then ((i++));fi
           if [[ $i -lt 0   ]];then i=$LM;fi
           if [[ $i -gt $LM ]];then i=0;fi;}
REFRESH(){ after=$((i+1)); before=$((i-1))
           if [[ $before -lt 0  ]];then before=$LM;fi
           if [[ $after -gt $LM ]];then after=0;fi
           if [[ $j -lt $i      ]];then UNMARK;M$before;else UNMARK;M$after;fi
           if [[ $after -eq 0 ]] || [ $before -eq $LM ];then
           UNMARK; M$before; M$after;fi;j=$i;UNMARK;M$before;M$after;}
   INIT(){ R;HEAD;FOOT;MENU;}
     SC(){ REFRESH;MARK;$S;$b;cur=`ARROW`;}
     ES(){ MARK;$e "ENTER = main menu ";$b;read;INIT;};INIT
  while [[ "$O" != " " ]]; do case $i in
# –ó–¥–µ—Å—å –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ —Å–ª–µ–¥–∏—Ç—å –∑–∞ –¥–≤—É–º—è –ø–µ—Ä–µ–ø–µ–Ω–Ω—ã–º–∏ 0) –∏ S=M0 –û–Ω–∏ –¥–æ–ª–∂–Ω—ã —Å–æ–≤–ø–∞–¥–∞—Ç—å –º–µ–∂–¥—É —Å–æ–±–æ–π –∏ –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π —Å–ø–∏—Å–∫–∞ M0().
        0) S=M0;SC;if [[ $cur == enter ]];then R;echo "\
 #
 –ª—é–±–æ–π —Ç–µ–∫—Å –ø–æ—Å–ª–µ –¥–∞–Ω–Ω–æ–≥–æ –∑–Ω–∞–∫–∞ —á–∏—Ç–∞–µ—Ç—Å—è –∫–∞–∫ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π
 –∑–∞ –∏—Å–∫–ª—é—á–µ–Ω–∏–µ–º –ø–µ—Ä–≤–æ–π —Å—Ç—Ä–æ–∫–∏:
 #!/bin/bash\
 ";fi;;
        1) S=M1;SC;if [[ $cur == enter ]];then R;echo "
 tput longname | –ü–æ–ª–Ω–æ–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —Ç–∏–ø–∞ —Ç–µ—Ä–º–∏–Ω–∞–ª–∞
 tput lines    | –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ª–∏–Ω–∏–π –≤ —Ç–µ—Ä–º–∏–Ω–∞–ª–µ
 tput cols     | –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Å—Ç–æ–ª–±—Ü–æ–≤ –≤ —Ç–µ—Ä–º–∏–Ω–∞–ª–µ
 tput colors   | –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –¥–æ—Å—Ç—É–ø–Ω—ã—Ö —Ü–≤–µ—Ç–æ–≤
";fi;;
        2) S=M2 ;SC;if [[ $cur == enter ]];then R;./tputTextEffects;fi;;
        3) S=M3 ;SC;if [[ $cur == enter ]];then R;./tputColorsText;fi;;
        4) S=M4 ;SC;if [[ $cur == enter ]];then R;./tputColorsBackground;fi;;
        5) S=M5 ;SC;if [[ $cur == enter ]];then R;./tputColorsTextBackground;fi;;
        6) S=M6 ;SC;if [[ $cur == enter ]];then R;./tputVariable;fi;;
        7) S=M7 ;SC;if [[ $cur == enter ]];then R;cat tputVariable;fi;;
        8) S=M8 ;SC;if [[ $cur == enter ]];then R;./tputVariableString;fi;;
        9) S=M9 ;SC;if [[ $cur == enter ]];then R;cat tputVariableString;fi;;
       10) S=M10;SC;if [[ $cur == enter ]];then R;./tputClock;fi;;
       11) S=M11;SC;if [[ $cur == enter ]];then R;cat tputClock;fi;;
       12) S=M12;SC;if [[ $cur == enter ]];then R;./tputSetafEchoN;fi;;
       13) S=M13;SC;if [[ $cur == enter ]];then R;cat tputSetafEchoN;fi;;
       14) S=M14;SC;if [[ $cur == enter ]];then R;./tputSetabEchoN;fi;;
       15) S=M15;SC;if [[ $cur == enter ]];then R;cat tputSetabEchoN;fi;;
       16) S=M16;SC;if [[ $cur == enter ]];then R;echo "16";fi;;
       17) S=M17;SC;if [[ $cur == enter ]];then R;echo "17";fi;;
       18) S=M18;SC;if [[ $cur == enter ]];then R;echo "18";fi;;
       19) S=M19;SC;if [[ $cur == enter ]];then R;echo "19";fi;;
       20) S=M20;SC;if [[ $cur == enter ]];then R;echo "20";fi;;
       21) S=M21;SC;if [[ $cur == enter ]];then R;echo "21";fi;;
       22) S=M22;SC;if [[ $cur == enter ]];then R;echo "\
–°–ª–µ–¥–∏–º —Å–∏–Ω—Ç–∞–∫—Å–∏—Å–æ–º!

–¢–∞–∫ –º–æ–∂–Ω–æ:  red=\`tput setaf 1\`
–¢–∞–∫ –Ω–µ–ª—å–∑—è: red = \`tput setaf 1\`
";fi;;
       23) S=M23;SC;if [[ $cur == enter ]];then R;ne TputEditing;fi;;
       24) S=M24;SC;if [[ $cur == enter ]];then R;echo "\
https://askubuntu.com/questions/1705/how-can-i-create-a-select-menu-in-a-shell-script \n
https://linuxcommand.org/lc3_adv_tput.php                                             \n
";fi;;
       25) S=M25;SC;if [[ $cur == enter ]];then R;exit 0;fi;;
 esac;POS;done
