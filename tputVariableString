echo " $(tput setaf 3)yellow text $(tput sgr 0)"
echo " $(tput setaf 4)blue text $(tput sgr 0)"
echo " $(tput setaf 5)purple text $(tput sgr 0)"
echo " $(tput setaf 6)azure text $(tput sgr 0)"
echo " $(tput setaf 7)grey text $(tput sgr 0)"
#
echo""
# Цветной фон
echo " $(tput setab 0)black background$(tput sgr 0)"
