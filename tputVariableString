echo " $(tput setab 2)green background$(tput sgr 0)"
echo " $(tput setab 3)yellow background$(tput sgr 0)"
echo " $(tput setab 4)blue background$(tput sgr 0)"
echo " $(tput setab 5)purple background$(tput sgr 0)"
echo " $(tput setab 6)azure background$(tput sgr 0)"
